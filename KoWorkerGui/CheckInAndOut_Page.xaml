        </ListBox>
        <Label x:Name="CheckedIn_Label" Content="Tjekket Ind" HorizontalAlignment="Left" Margin="243,89,0,0" VerticalAlignment="Top"/>
        <Label x:Name="CheckedOut_Label" Content="Tjekket Ud" HorizontalAlignment="Left" Margin="243,317,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ShowInfo_Button" Content="Vis Info" HorizontalAlignment="Left" Height="22" Margin="22,538,0,0" VerticalAlignment="Top" Width="100" Click="ShowInfo_Button_Click"/>
        <ListBox x:Name="EmployeesCheckInListBox" HorizontalAlignment="Left" Height="165" Margin="36,129,0,0" VerticalAlignment="Top" Width="545" SelectionChanged="EmployeesCheckInListBox_SelectionChanged" />


    </Grid>
